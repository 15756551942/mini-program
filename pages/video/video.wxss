.videoContainer .header {
  display: flex;
  padding: 10rpx;
}

.videoContainer .header image {
  width: 60rpx;
  height: 60rpx;
}

.serach {
  border: 1rpx solid #eee;
  flex: 1;
  margin: 0 20rpx;
  font-size: 26rpx;
  text-align: center;
  line-height: 60rpx;
  color: #d43c33;
}

.navScroll {
  display: flex;
  white-space: nowrap;
  height: 60rpx;
}

.navScroll .navItem {
  padding: 0 30rpx;
  font-size: 28rpx;
  height: 60rpx;
  line-height: 60rpx;
}

.navScroll .navItem .navContent {
  box-sizing: border-box;
}

.navItem .active {
  border-bottom: 1rpx solid #d43c33
}

.videoScroll {
  /* margin-top: 10rpx; */
  height: calc(100vh - 152rpx);
}

.videoScroll .videoItem {
  padding: 10rpx 3%;
}

.common {
  width: 100%;
  height: 360rpx;
  border-radius: 10rpx;
}